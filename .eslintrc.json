{
  "env": { "node": true, "commonjs": true, "browser": true },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": { "modules": true, "jsx": true }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "rules": { "no-var": "error", "prefer-const": "error" }
}
